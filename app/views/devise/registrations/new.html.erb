<div class="container-form-sign">
  <div class="form-sign">
    <h2 class="title-center">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email address", class:"sign-bar" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"6 characters minimum", class:"sign-bar" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm password", class:"sign-bar"  %>
      <div class="actions">
        <%= f.submit "Create Account", class:'button-blue' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
