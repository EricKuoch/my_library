<div class="container-form-sign">
  <div class="form-sign">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"E-mail adress", class:"sign-bar" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"sign-bar" %>
      <% if false %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>
      <div class="actions">
        <%= f.submit "Log In", class:'button-blue' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
